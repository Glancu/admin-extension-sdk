{
  "name": "@shopware-ag/admin-extension-sdk",
  "license": "MIT",
  "version": "0.0.43",
  "repository": "git://github.com/shopware/admin-extension-sdk.git",
  "description": "The SDK for App iframes to communicate with the Shopware Adminstration",
  "keywords": [
    "iframe",
    "shopware",
    "admin",
    "bridge",
    "app",
    "sdk"
  ],
  "files": [
    "umd",
    "es",
    "cdn"
  ],
  "main": "./umd/index.js",
  "module": "./es/index.js",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./umd/index.js"
    }
  },
  "types": "./es/index.d.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:build-watch\" \"npm run dev:serve -- --port=8181\" \"npm run dev:serve -- --port=8182\"",
    "dev:build-watch": "vite build --watch --mode example --emptyOutDir",
    "dev:serve": "http-server testpageDist --silent",
    "build": "rm -rf es && rm -rf umd && rm -rf cdn && npm run build:umd && npm run build:es && npm run build:cdn",
    "build:umd": "tsc --project tsconfig.json --module umd --outDir \"./umd\"",
    "build:es": "tsc --project tsconfig.json --outDir \"./es\"",
    "build:cdn": "vite build --mode cdn",
    "doc": "cd docs && npm run build",
    "doc:dev": "cd docs && npm run start",
    "doc:install-dependencies": "cd ./docs && npm ci",
    "lint": "npm run lint:types && npm run lint:eslint",
    "lint:types": "tsc --noEmit",
    "lint:eslint": "eslint ./src --ext .ts",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watch",
    "e2e": "concurrently --handle-input --kill-others --success first \"npm run dev\" \"wait-on tcp:8181 && wait-on tcp:8182 && playwright test\"",
    "e2e:dev": "playwright test --project=chromium --reporter=list",
    "e2e:dev-watch": "chokidar \"{e2e,src}/**/*.{js,ts}\" -c 'npm run e2e:dev' --initial",
    "e2e:dev-debug": "PWDEBUG=1 npm run e2e:dev",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.18.0",
    "@types/jest": "^27.0.3",
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "vite": "^2.6.0",
    "vite-plugin-dts": "^0.8.2",
    "vite-tsconfig-paths": "^3.3.14"
  },
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "flush-promises": "^1.0.2",
    "http-server": "^14.1.0",
    "lodash-es": "^4.17.21",
    "wait-on": "^6.0.0"
  }
}
